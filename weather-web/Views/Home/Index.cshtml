@{
    ViewData["Title"] = "Home Page";
}
@model backend.models.WeatherModel;
@using backend.models;

<head>
    <style>
        .text-center {
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        h1.display-4 {
            font-size: 3rem;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 20px;
        }

        form {
            margin-bottom: 20px;
        }

        input[type="text"] {
            padding: 10px;
            font-size: 1rem;
            width: 60%;
            margin-right: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }

        input[type="submit"] {
            padding: 10px 20px;
            font-size: 1rem;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #0056b3;
            }

        h5 {
            font-size: 1.25rem;
            margin: 10px 0;
            color: #343a40;
        }

        img {
            margin-top: 15px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

            ul li {
                background-color: #f8f9fa;
                padding: 10px;
                margin-bottom: 10px;
                border-radius: 4px;
                box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            }

                ul li strong {
                    color: #007bff;
                    font-size: 1.1rem;
                }
    </style>
</head>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form asp-controller="Home" asp-action="GetWeatherDetails" method="post">
        <div>
            <input type="text" name="location" />
            <input type="submit" value="Submit" />
        </div>
    </form>
    <br />
    @if (Model != null)
    {
    <h5>@Model.Location.name</h5>
    <h5>@Model.Location.country</h5>
    <h5>@Model.Location.localtime</h5>
    <h5>@Model.Current.temp_c</h5>
    <h5>@Model.Current.temp_f</h5>
    <h5>@Model.Current.humidity</h5>
    <h5>@Model.Current.is_day</h5>
    <h5>@Model.Current.vis_km</h5>
    <h5>@Model.Current.wind_kph</h5>
    <img src="@($"https:{Model.Current.condition.icon}")" alt="Current weather condition" />

    if (ViewData["HourlyForecast"] != null)
        {
            var hourlyForecast = (List<Hour>)ViewData["HourlyForecast"];
    <h3>Hourly Forecast</h3>
    <ul>
        @foreach (var hour in hourlyForecast)
                {
        <li>
            <strong>@hour.time</strong>: @hour.condition.text
            <br />
            Temp: @hour.temp_c°C (@hour.temp_f)°F
        </li>
                }
        @foreach (var day in Model.Forecast.forecastday)
         {
        <li>
            <strong>@day.date</strong>: @day.day.condition.text
            <br />
            Avg Temp: @day.day.avgtemp_c°C (@day.day.avgtemp_f)°F
        </li>
         }
    </ul>
        }
    }
</div>