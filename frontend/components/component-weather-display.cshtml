@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Weather App displaying current weather and forecast information.">
    <title>Weather App</title>
    <link rel="stylesheet" href="~/styles/StyleWeatherDisplay.css">
</head>
<body>
    <div class="container">
        <header>
            <div class="search-bar">
                <input type="text" placeholder="Search...">
                <button class="search-button"><img src="~/images/search-icon.png" alt="Search Icon"></button>
                <div class="temp-toggle">
                    <span>°C</span>
                    <span>°F</span>
                </div>
            </div>
        </header>
        <main>
            <section class="weather-main">
                <div class="weather-main-content">
                    <div class="weather-icon">
                        <img src="~/images/cloudy-icon.png" alt="Cloudy Weather Icon">
                        <div class="temperature">16°C</div>
                        <div class="condition">Cloudy</div>
                    </div>
                </div>
                <div class="location-time">
                    <div class="location">Lima</div><br/>
                    <div class="time">16:47</div>
                </div>
            </section>
            <div class="details-forecast-container">
                <section class="weather-details">
                    <div class="detail-item">
                        <img src="~/images/humidity-icon.png" alt="Humidity Icon">
                        <span>82%</span>
                    </div>
                    <div class="detail-item">
                        <img src="~/images/wind-icon.png" alt="Wind Icon">
                        <span>23 km/h</span>
                    </div>
                    <div class="detail-item">
                        <img src="~/images/visibility-icon.png" alt="Visibility Icon">
                        <span>8 km</span>
                    </div>
                </section>
                <section class="weather-forecast">
                    <div class="forecast-item">
                        <img src="~/images/rain-icon.png" alt="Rain Icon">
                        <span>16°C</span>
                        <span>00:00</span>
                    </div>
                    <div class="forecast-item">
                        <img src="~/images/partly-cloudy-icon.png" alt="Partly Cloudy Icon">
                        <span>16°C</span>
                        <span>06:30</span>
                    </div>
                    <div class="forecast-item">
                        <img src="~/images/sunny-icon.png" alt="Sunny Icon">
                        <span>16°C</span>
                        <span>10:00</span>
                    </div>
                    <div class="forecast-item">
                        <img src="~/images/cloudy-icon.png" alt="Cloudy Icon">
                        <span>16°C</span>
                        <span>12:00</span>
                    </div>
                    <div class="forecast-item">
                        <img src="~/images/rain-icon.png" alt="Rain Icon">
                        <span>16°C</span>
                        <span>15:30</span>
                    </div>
                    <div class="forecast-item">
                        <img src="~/images/rain-icon.png" alt="Rain Icon">
                        <span>16°C</span>
                        <span>21:47</span>
                    </div>
                    <div class="forecast-item">
                        <img src="~/images/rain-icon.png" alt="Rain Icon">
                        <span>16°C</span>
                        <span>23:00</span>
                    </div>
                </section>
            </div>
        </main>
    </div>
    <script src="~/scripts/ScriptWeatherFetch.js"></script>
</body>
</html>
